{
  "name": "protobuf.js-conformance",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./dist/esm/* ./dist/types/*",
    "build": "npm run build:esm+types && npm run copy:gen",
    "build:esm+types": "./node_modules/typescript/bin/tsc --project tsconfig.json --module ES2015 --outDir ./dist/esm --declaration --declarationDir ./dist/types",
    "copy:gen": "mkdir -p dist/esm/gen && cp gen/*.js dist/esm/gen"
  },
  "type": "module",
  "types": "./dist/types/index.d.ts",
  "dependencies": {
    "long": "^5.2.1",
    "protobufjs": "^7.1.2"
  },
  "devDependencies": {
    "typescript": "^4.9.5",
    "@types/node": "^18.13.0",
    "protobufjs-cli": "^1.0.2"
  }
}
